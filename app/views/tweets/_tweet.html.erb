    <h2><%= link_to tweet.title, tweet_path(tweet) %></h2>
      <span class="pull-right"><%= image_tag(attachment_url(tweet.user, :user_image), alt: tweet.user.name, style: "max-height: 50px;") %></span>

    <p><%= truncate(tweet.body, length: 350) %></p>

    <div class="btn-group">
      <%= link_to 'Edit', edit_tweet_path(tweet), class: 'btn btn-info' %>
      <%= link_to 'Delete', tweet_path(tweet), data: {confirm: 'Are you sure?'}, method: :delete, class: 'btn btn-danger' %>
    </div>
    <br>
    <hr style="border-top:5px solid #000;">
