<div class="navbar navbar-inverse">
  <div class="container">
    <div class="navbar-header">
      <%= link_to 'TrueView Tweeter', root_path, class: 'navbar-brand' %>
    </div>
    <ul class="nav navbar-nav pull-right">
      <% if current_user %>
        <li><span><%= image_tag(attachment_url(current_user, :user_image), alt: current_user.name, style: "max-height: 50px;") %></span></li>
        <li><%= link_to 'Log Out', destroy_user_session_path, method: :delete %></li>
      <% else %>
        <li><%= link_to 'Log In', user_session_path %></li>
      <% end %>
    </ul>
  </div>
</div>
